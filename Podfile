# Uncomment the next line to define a global platform for your project
# platform :ios, '13.0'

target 'BlackMagicCoffee' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for BlackMagicCoffee


  # Events handling 
   pod 'RxSwift', '6.5.0'
   pod 'RxCocoa', '6.5.0'
   pod 'RxOptional'
   pod 'RxFlow' 

  # Networking 
   pod 'Alamofire'
   pod 'TinyNetworking'

  #Google maps 
    pod 'GoogleMaps'
    pod 'GooglePlaces'
    pod 'Google-Maps-iOS-Utils'

  # for interface
    pod 'SnapKit'
    pod 'FlexLayout'
  
  # Extensions 
    pod 'SwifterSwift'
  
  # Toast
    pod 'ToastViewSwift'

  # Lottie animations
    pod 'lottie-ios'
  
  # SubViews
    pod 'Panels'  

  # RadioButton layout 
    pod 'RadioGroup' 
 
  # for button transition 
    pod 'TransitionButton'

  # for launching - Onboarding 
    pod 'Presentation'
    pod 'GravitySliderFlowLayout'
  
  # for reading QR code 
    pod 'QRCodeReader.swift', '~> 10.1.0'

  # Phone verification text field 
     pod 'CHIOTPField', '~> 0.1'






end
